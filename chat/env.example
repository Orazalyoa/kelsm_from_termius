# Server
PORT=8080
GIN_MODE=debug

# MySQL (与 Laravel 共享)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=kelisim
DB_USERNAME=root
DB_PASSWORD=

# JWT (与 Laravel 共享)
JWT_SECRET=your-jwt-secret-here
JWT_ALGO=HS256

# File Storage (本地存储)
STORAGE_PATH=./storage/chat-files
STORAGE_BASE_URL=http://localhost:8080/storage/chat-files
MAX_FILE_SIZE=10485760

# DeepSeek LLM API
DEEPSEEK_API_KEY=sk-your-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT=30

# Firebase Cloud Messaging (FCM) Push Notifications

# V1 API (推荐使用，更安全和现代)
# 1. 在 Firebase Console -> Project Settings -> Service Accounts
# 2. 点击 "Generate new private key"
# 3. 下载 JSON 文件并保存到安全位置
# 4. 填写 JSON 文件的完整路径
FCM_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Legacy API (已弃用，但仍可用)
# 从 Firebase Console -> Project Settings -> Cloud Messaging 获取
# 如果 FCM_SERVICE_ACCOUNT_PATH 未配置，将使用此方式
FCM_SERVER_KEY=your-firebase-server-key-here

